def chatbot():
    print("ğŸ¤– Chatbot: Hello! Type 'bye' to exit.")

    while True:
        user_input = input("You: ").lower()

        if user_input == "hello":
            print("ğŸ¤– Chatbot: Hi!")
        elif user_input == "how are you":
            print("ğŸ¤– Chatbot: I'm fine, thanks!")
        elif user_input == "bye":
            print("ğŸ¤– Chatbot: Goodbye!")
            break
        else:
            print("ğŸ¤– Chatbot: Sorry, I don't understand.")

chatbot()
